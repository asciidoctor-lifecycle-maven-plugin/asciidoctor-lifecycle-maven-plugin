<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.Lifecycle</role>
            <implementation>org.apache.maven.lifecycle.Lifecycle</implementation>
            <role-hint>asciidoctor-lifecycle-build</role-hint>
            <configuration>
                <id>asciidoctor-lifecycle-build</id>
                <phases>
                    <phase>prepare-theme</phase>
                    <phase>theme</phase>
                    <phase>prepare-build</phase>
                    <phase>build</phase>
                    <phase>asciidoctor-prepare-publish</phase>
                    <phase>asciidoctor-publish</phase>
                    <phase>notify</phase>
                </phases>
                <default-phases>
                    <theme>com.coutemeier.maven.plugins:asciidoctor-lifecycle-maven-plugin:theme</theme>
                    <!--
                        This has the inconvenient of generating an extra xml,
                        because it is invoked the default process-asciidoc goal, outside the executions,
                        and the backend by default is docbook.
                        So at this moment the process-asciidoc goal is not configured in the build phase.
                    -->
                    <prepare-build>com.coutemeier.maven.plugins:asciidoctor-lifecycle-maven-plugin:prepare-sources</prepare-build>
                    <build>org.asciidoctor:asciidoctor-maven-plugin:process-asciidoc</build>
                    <asciidoctor-publish>com.coutemeier.maven.plugins:asciidoctor-lifecycle-maven-plugin:asciidoctor-publish</asciidoctor-publish>
                </default-phases>
            </configuration>
        </component>
    </components>
</component-set>
